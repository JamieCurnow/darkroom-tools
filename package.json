{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "npx nuxi typecheck",
    "build": "npm run typecheck && nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "deploy:dev": "npm run typecheck && firebase experiments:enable webframeworks && firebase experiments:enable pintags && firebase deploy -f --project=dev",
    "deploy:staging": "npm run typecheck && firebase experiments:enable webframeworks && firebase experiments:enable pintags && firebase deploy -f --project=staging",
    "deploy:production": "npm run typecheck && firebase experiments:enable webframeworks && firebase experiments:enable pintags && firebase deploy -f --project=production",
    "createDeployServiceAccount:dev": "tsx --tsconfig  ./devops-tsconfig.json ./scripts/createDeployServiceAccount.ts dev",
    "createDeployServiceAccount:staging": "tsx --tsconfig  ./devops-tsconfig.json ./scripts/createDeployServiceAccount.ts staging",
    "createDeployServiceAccount:production": "tsx --tsconfig  ./devops-tsconfig.json ./scripts/createDeployServiceAccount.ts production",
    "firestoreMigrations": "tsx --tsconfig  ./migrations-tsconfig.json ./migrations/index.ts",
    "lint": "eslint .",
    "lint:staged": "eslint $(git diff --cached --name-only --diff-filter=ACMR HEAD | xargs)",
    "lint:fix": "eslint --fix .",
    "lint:fix-staged": "eslint --fix $(git diff --cached --name-only --diff-filter=ACMR HEAD | xargs)",
    "prepare": "husky"
  },
  "engines": {
    "node": "20"
  },
  "devDependencies": {
    "@hiyield/nuxt-layer-firebase": "^0.1.27",
    "@hiyield/nuxt-layer-firebase-auth": "^0.0.23",
    "@nuxt/devtools": "latest",
    "@nuxt/eslint": "^0.4.0",
    "@nuxt/ui": "^2.16.0",
    "@types/node": "^20.8.9",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "firebase-tools": "^13.10.2",
    "husky": "^9.1.4",
    "nuxt": "^3.11.2",
    "nuxt-doppler": "^1.0.1",
    "nuxt-firebase-webframework": "^0.0.10",
    "nuxt-security": "^2.0.0-rc.6",
    "prettier": "^3.0.3",
    "tsx": "^4.12.0",
    "typescript": "^5.2.2",
    "vue-router": "^4.2.5"
  },
  "overrides": {
    "vue": "latest"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/nuxt": "^10.10.0",
    "firebase": "^10.12.2",
    "firebase-admin": "^12.1.1",
    "firebase-functions": "^5.0.1",
    "nanoid": "^5.0.7",
    "pinia": "^2.1.7"
  }
}
